<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Catharsium.Apps.PoolScoreboard.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Catharsium.Apps.PoolScoreboard.Views"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem Title="Astronomy" Icon="moon.png">
        <ShellContent Title="Match" ContentTemplate="{DataTemplate local:MatchPage}"/>
        <ShellContent Title="Turns" ContentTemplate="{DataTemplate local:SheetPage}"/>
        <ShellContent Title="Stats" ContentTemplate="{DataTemplate local:StatsPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="About">
        <ShellContent
        ContentTemplate="{DataTemplate local:MatchPage}"/>
    </FlyoutItem>
</Shell>